{
  "extends": "./tsconfig.base.json",
  "include": [
    /*
     * This is supposed to match vitest's default patterns, i.e. "** /*.{test,spec}.?(c|m)[jt]s?(x)"
     * The glob format used by tsconfig is a bit different, so we need to expand it manually
     * Also added test-d for the Vitest type testing feature
     */
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.test.ts",
    "**/*.test.tsx",

    "**/*.test.cjs",
    "**/*.test.cjsx",
    "**/*.test.cts",
    "**/*.test.ctsx",

    "**/*.test.mjs",
    "**/*.test.mjsx",
    "**/*.test.mts",
    "**/*.test.mtsx",

    "**/*.test-d.js",
    "**/*.test-d.jsx",
    "**/*.test-d.ts",
    "**/*.test-d.tsx",

    "**/*.test-d.cjs",
    "**/*.test-d.cjsx",
    "**/*.test-d.cts",
    "**/*.test-d.ctsx",

    "**/*.test-d.mjs",
    "**/*.test-d.mjsx",
    "**/*.test-d.mts",
    "**/*.test-d.mtsx",

    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",

    "**/*.spec.cjs",
    "**/*.spec.cjsx",
    "**/*.spec.cts",
    "**/*.spec.ctsx",

    "**/*.spec.mjs",
    "**/*.spec.mjsx",
    "**/*.spec.mts",
    "**/*.spec.mtsx",

    // Include type definitions that are active in src because we want to import stuff in src to test it and we want
    // the types to be available
    "src/**/*.d.ts",

    // And finally what we really want to include
    "test"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.test.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable"]
  }
}
