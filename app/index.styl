/* General styles */

*
  box-sizing border-box

html, body, #container
  height 100%
  margin 0
  padding 0
  background-color #2D2D2D
  color #CCCCCC
  font 14px/normal 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace
  overflow hidden

select, input, button
  border none
  outline none
  cursor pointer

button
  color #fbfbfb
  font 14px/normal 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace

  i.fa:only-child
    vertical-align middle

makeColor(name, normal, hover, active)
  button.color-{name}, .color-{name} button
    background-color normal
    .fa-inverse
      color normal

  button:hover:not(:active).color-{name}, .color-{name} button:hover:not(:active)
    background-color hover
    .fa-inverse
      color hover

  button:active.color-{name},.color-{name} button:active
    background-color active
    .fa-inverse
        color active

  .color-{name} .panel,
  .color-{name} .panel-container.open > button,
  .color-{name} .panel-container.open :not(.panel) button,
  .color-{name}.panel-container.open > button,
  .color-{name}.panel-container.open :not(.panel) button
    background-color hover

makeColor('orange', #f99157, #e98147, #ffb177)
makeColor('green', #40e889, #30d879, #50f899)
makeColor('green2', #99cc99, #89bc89, #a9dca9)
makeColor('purple', #bc89bc, #ac79ac, #cc99cc)
makeColor('red', #f2777a, #e2676a, #ff878a)
makeColor('blue', #66cccc, #56bcbc, #76dcdc)

.left
  position absolute
  left 0

.right
  position absolute
  right 0

.icon-stack
  position relative
  display inline-block
  width 1em
  height 1em
  line-height 1em
  vertical-align middle

.icon-stack-0-5x
  position absolute
  width 100%
  text-align center
  font-size 0.5em
  line-height inherit

/* Components */

.Musika-App
  height 100%
  display flex
  flex-direction column

.Musika-Player
  background-color #000000
  user-select none
  height 2em
  flex-shrink 0
  cursor default

  button
    width 2em
    height 2em

  input[type=range]
    height 0.8em
    margin 0 0.5em
    cursor pointer

.Musika-TimeSlider
  height 100%
  display inline-block
  margin-left 0.5em

.Musika-TimeSeeker
  height 100%
  display inline-block
  margin-left 0.2em

  input[type=time]
    height 100%
    border none
    outline none
    -moz-appearance textfield
    padding 0 0 0 1em

    margin 0px
    width 5em
    vertical-align top

    &::-webkit-inner-spin-button,
    &::-webkit-outer-spin-button
      -webkit-appearance none
      margin 0

.Musika-CPULoad
  user-select none
  width 100%
  height 0.73rem
  background linear-gradient(
    to right,
    rgba(141,249,87,1) 0%,
    rgba(255,255,0,1) 30%,
    rgba(249,145,87,1) 50%,
    rgba(242,119,122,1) 100%
  )
  color white
  flex-shrink 0
  font-size 8px
  position relative
  cursor default

  & > .black
    position absolute
    right 0
    height 1rem
    background-color #181818

  & > .left, & > .right
    text-shadow 0px 0px 4px rgba(0, 0, 0, 1),
      0px 0px 2px rgba(0, 0, 0, 1),
      0px 0px 2px rgba(0, 0, 0, 1),
      0px 0px 2px rgba(0, 0, 0, 1),
      0px 0px 2px rgba(0, 0, 0, 1)
    margin 0 2px

.ace_editor
  width 100%
  height 100%
  z-index 0

.ace_scroller, .ace_gutter
  padding-top 0.1em

.ace_gutter-active-line
  margin-top 0.1em

.ace_scroller::before, .ace_gutter::before,
.ace_scroller::after, .ace_gutter::after
  position absolute
  width 100%
  height 1.5em
  content ' '
  z-index 1
  pointer-events none

.ace_scroller::before, .ace_gutter::before
  top 0
  background linear-gradient(
    to bottom,
    rgba(0,0,0,1) 0%,
    rgba(0,0,0,0.5) 1%,
    rgba(0,0,0,0.25) 30%,
    rgba(0,0,0,0.1) 60%,
    rgba(0,0,0,0) 100%
  )

.ace_scroller::after, .ace_gutter::after
  bottom 0
  background linear-gradient(
    to top,
    rgba(0,0,0,1) 0%,
    rgba(0,0,0,0.5) 1%,
    rgba(0,0,0,0.25) 30%,
    rgba(0,0,0,0.1) 60%,
    rgba(0,0,0,0) 100%
  )

.panel-wrapper
  z-index 0

.Musika-bottomPanel
  flex-shrink 0
  height 1.6em
  user-select none
  background-color #2D2D2D

  .panel-container
    position relative
    display inline-block
    height 100%

  .panel
    color #fbfbfb
    padding 0 1em 1.5em 1em
    width 25em
    height auto
    display block
    position absolute
    left 0
    z-index -1
    box-shadow 0 0 30px #000, 0 0 30px #000
    animation-duration 0.3s
    animation-name slidein
    animation-timing-function cubic-bezier(0.675, -0.010, 0.680, 1.210);
    animation-fill-mode forwards
    font-family Arial, "Helvetica Neue", Helvetica, sans-serif;
    cursor default
    font-size 16px

    button
      padding 0.4em 1em
      border 1px solid rgba(251, 251, 251, 0.5)
      font-family Arial, "Helvetica Neue", Helvetica, sans-serif;

  & > *
    margin-right 0.25em

  & button,
  & select
    height 100%

@keyframes slidein
  from
    bottom -10em

  to
    bottom calc(1.6em - 1em)
